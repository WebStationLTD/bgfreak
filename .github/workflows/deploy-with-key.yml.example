name: Deploy to VPS (SSH Key)

# Кога да се изпълнява
on:
  push:
    branches: [master]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # 1. Изтегли кода от GitHub
      - name: Checkout code
        uses: actions/checkout@v4

      # 2. Настрой Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "18"
          cache: "npm"

      # 3. Инсталирай dependencies
      - name: Install dependencies
        run: npm install

      # 4. Build апликацията
      - name: Build application
        run: npm run generate

      # 5. Deploy към VPS с SSH KEY
      - name: Deploy to VPS
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ${{ secrets.VPS_USERNAME }}
          key: ${{ secrets.VPS_SSH_KEY }}
          port: ${{ secrets.VPS_PORT || 22 }}
          source: ".output/public/*"
          target: "/home/bgfreak/public_html/"
          strip_components: 2
          overwrite: true

